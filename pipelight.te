module pipelight 0.1.0;

require {
	type configfs_t;
	type usr_t;
	type user_home_dir_t;
	type pstorefs_t;
	type user_home_t;
	type fonts_t;
	type winbind_helper_exec_t;
	type mozilla_plugin_t;
	class file { write rename execute setattr read execmod unlink open execute_no_trans };
	class dir { getattr create setattr rmdir };
}

#============= mozilla_plugin_t ==============
allow mozilla_plugin_t configfs_t:dir getattr;
allow mozilla_plugin_t fonts_t:file execute;
allow mozilla_plugin_t pstorefs_t:dir getattr;
allow mozilla_plugin_t user_home_dir_t:dir create;
allow mozilla_plugin_t user_home_t:dir { rmdir setattr };
allow mozilla_plugin_t user_home_t:file { write rename execute unlink setattr };
allow mozilla_plugin_t usr_t:file execmod;
allow mozilla_plugin_t winbind_helper_exec_t:file { read execute open execute_no_trans };
